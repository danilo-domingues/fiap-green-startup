@model IEnumerable<Fiap.Green.Startup.Models.Fornecedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrVendas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrVendas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.IdEmpresa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFornecedor">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdFornecedor">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdFornecedor">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
